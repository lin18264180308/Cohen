        <servlet-name>jump_showallbreakdown_page</servlet-name>
        <jsp-file>/WEB-INF/operator/show_all_breakdown.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>jump_showallbreakdown_page</servlet-name>
        <url-pattern>/show_all_breakdown.jsp</url-pattern>
    </servlet-mapping>
</web-app>