    </servlet>
    <servlet-mapping>
        <servlet-name>jump_pageleft_page</servlet-name>
        <url-pattern>/page_left.jsp</url-pattern>
    </servlet-mapping>
    <!-- page_tool_file.jsp嵌套页面跳转 -->
    <servlet>
        <servlet-name>jump_pagetoolfile_page</servlet-name>
        <jsp-file>/WEB-INF/operator/page_tool_file.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>jump_pagetoolfile_page</servlet-name>
        <url-pattern>/page_tool_file.jsp</url-pattern>
    </servlet-mapping>
    <!-- page_main_tool.jsp嵌套页面跳转 -->
