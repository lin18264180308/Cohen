<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <package name="operator1" namespace="/" extends="abstract_package">
    <!-- 柱状图用户选择宽度的参数设置请求 -->
        <action name="getStatusWithDynamicTimeChoose" class="statusViewAction" method="statusWithDynamicTimeChoose">
            <result name="success">index.jsp</result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>

        <!-- 柱状图默认宽度的参数设置请求 -->
        <action name="setParameters" class="statusViewAction" method="setParameters">
            <result name="success">index.jsp</result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>
        </action>

        <!-- 柱状图拼接实时循环请求 -->
        <action name="getStatus" class="statusViewAction" method="status">
            <result name="json" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>
        </action>
        
        <!-- 时间选择静态 -->
        <action name="getStatusWithStaticTimeChoose" class="timeChooseAction" method="statusWithStaticTimeChoose">
            <result name="json" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
        
        <!-- 获取单机台的状态信息 -->
        <action name="getStatusOfMachine" class="machineStatusAction" method="status">
            <result name="json" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>

        <!-- 机台的速度还有计数 -->
        <action name="speedMachineAction" class="speedMachineAction" method="avgMachine">
            <result name="success" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
        <action name="machineCalculationAction" class="machineCalculationAction" method="jisuan">
            <result name="success" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
        <!-- 当前机台故障信息 -->
        <action name="currentBreakDownOfAloneMachine" class="currentBreakDownAction" method="currentFaultInfo">
            <result name="json" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
    </package>

    <package name="operator2" namespace="/a" extends="abstract_package">
    <!-- 线上检查表 -->
        <action name="onlineCheck-onlineCheck" class="OnlineCheckAction" method="onlineCheck">
            <result name="success" type="json"></result>
        </action>
    
        <action name="onlineCheck-getStatus" class="OnlineCheckAction" method="getStatus">
            <result name="success" type="json"></result>
        </action>
    
    <!-- 模式更改 -->
        <!-- 获取所有模式信息 -->
        <action name="modeChangeGet" class="modeChangeAction" method="getAll">
            <result name="success" type="json">
                <param name="root">modes</param>
            </result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
        <!-- 获取所有模式信息 -->
        <action name="getVarietie" class="modeChangeAction" method="getVarietie">
            <result name="success" type="json">
                <param name="root">varieties</param>
            </result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
        <!-- 模式切换请求 -->
        <action name="modeChange" class="modeChangeAction" method="modeChange">
            <result name="success" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
    
    <!-- 班组选择 -->
        <action name="teamSelection" class="teamSelectionAction" method="getAll">
            <result name="json" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
        <action name="teamSave" class="teamSelectionAction" method="teamSave">
            <result name="success" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
    
    <!-- 备注总览 -->
        <action name="remark-*" class="remarkAction" method="{1}">
            <result name="success" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
    
    <!-- 获取实时状态（初始化） -->
        <action name="initData" class="machineStatusAction" method="initData">
            <result name="json" type="json">
                <param name="root">initDatas</param>
            </result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
    
    <!-- 获取实时状态（瞬时状态） -->
        <action name="currentStatus" class="machineStatusAction" method="currentStatus">
            <result name="json" type="json">
                <param name="root">status</param>
            </result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
    
    <!-- 模式切换触发自动记录各机台大停机小停机 -->
        <action name="halt-*" class="haltAction" method="{1}">
            <result name="success" type="json"></result>
            <interceptor-ref name="myInterceptor"></interceptor-ref>    
        </action>
    
        <!-- 获取实时状态（一条数据，循环）
        <action name="onlineAction" class="onlineAction" method="getState">
            <result name="success" type="json"></result>
        </action> 
          -->
    </package>

</struts>
